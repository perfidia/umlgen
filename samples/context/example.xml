<!-- there has to be some root -->
<context>
    <!-- there is only one process node -->
    <process>
        <label>system</label>
        <!-- id is a string -->
        <id>p_0</id>
    </process>
    
    <!-- collection of entities -->
    <entities>
        <entity>
            <!-- id is a string -->
            <id>0</id>
            <label>HDE</label>
            <!-- type can be a human or a system -->
            <type>system</type>
        </entity>
        <entity>
            <id>e_1</id>
            <label>HDE</label>
            <type>human</type>
        </entity>
        <entity>
            <id>e_2</id>
            <label>ijo</label>
            <type>human</type>
        </entity>
    </entities>
    
    <!-- a collection of connections -->
    <connections>
        <connection>
            <!-- use id from process or entities -->
            <from>p_0</from>
            <!-- use id from process or entities -->
            <to>e_1</to>
            <!-- is empty if omitted -->
            <label>a connection</label>
        </connection>
        <connection>
            <!-- use id from process or entities -->
            <from>0</from>
            <!-- use id from process or entities -->
            <to>e_1</to>
            <!-- is empty if omitted -->
            <label>a connection</label>
        </connection>
        <connection>
            <!-- use id from process or entities -->
            <from>p_0</from>
            <!-- use id from process or entities -->
            <to>0</to>
            <!-- is empty if omitted -->
            <label>a connection</label>
        </connection>
        <connection>
            <!-- use id from process or entities -->
            <from>e_2</from>
            <!-- use id from process or entities -->
            <to>e_1</to>
            <!-- is empty if omitted -->
            <label>a connection</label>
        </connection>
    </connections>
</context>
